<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="16dp"
        android:background="@color/light_green"
        tools:context=".Activities.job_Description">

        <TextView
            android:id="@+id/comp_name"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:background="@color/white"
            android:padding="8dp"
            android:text="Company Name"
            android:textColor="@color/dark_green"
            android:textSize="20sp"
            android:textStyle="bold"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/job_title"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="Job Title"
            android:textSize="20sp"
            android:textStyle="bold"
            android:textColor="@color/black"
            android:layout_marginTop="0dp"
            app:layout_constraintTop_toBottomOf="@+id/comp_name"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:padding="8dp"
            android:background="@color/white" />

        <TextView
            android:id="@+id/job_loc"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="Location"
            android:textSize="16sp"
            android:textColor="@color/black"
            android:layout_marginTop="0dp"
            app:layout_constraintTop_toBottomOf="@+id/job_title"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:padding="8dp"
            android:background="@color/white" />

        <Button
            android:id="@+id/apply_button"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="Apply"
            android:textColor="@color/white"
            android:layout_marginTop="16dp"
            android:backgroundTint="@color/dark_green"
            app:layout_constraintTop_toBottomOf="@+id/job_loc"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toStartOf="@+id/save_button"
            android:padding="12dp"
            app:layout_constraintHorizontal_weight="1" />

        <Button
            android:id="@+id/save_button"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="Save"
            android:textColor="@color/white"
            android:layout_marginTop="16dp"
            android:backgroundTint="@color/dark_green"
            app:layout_constraintTop_toBottomOf="@+id/job_loc"
            app:layout_constraintStart_toEndOf="@+id/apply_button"
            app:layout_constraintEnd_toEndOf="parent"
            android:padding="12dp"
            app:layout_constraintHorizontal_weight="1" />

        <TextView
            android:id="@+id/textView4"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="About the Job"
            android:textSize="20sp"
            android:textStyle="bold"
            android:textColor="@color/dark_green"
            android:layout_marginTop="24dp"
            app:layout_constraintTop_toBottomOf="@+id/apply_button"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:padding="8dp"
            android:background="@color/white" />

        <TextView
            android:id="@+id/job_content"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="Job content goes here. This is where the job description will be displayed."
            android:textSize="16sp"
            android:textColor="@color/black"
            android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/textView4"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:padding="8dp"
            android:background="@color/white" />

        <TextView
            android:id="@+id/textView6"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="Contact Details"
            android:textSize="20sp"
            android:textStyle="bold"
            android:textColor="@color/dark_green"
            android:layout_marginTop="24dp"
            app:layout_constraintTop_toBottomOf="@+id/job_content"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:padding="8dp"
            android:background="@color/white" />

        <TextView
            android:id="@+id/job_no"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="Whatsapp No: +1234567890"
            android:textSize="16sp"
            android:textColor="@color/black"
            android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/textView6"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:padding="8dp"
            android:background="@color/white" />
    </androidx.constraintlayout.widget.ConstraintLayout>
</ScrollView>
